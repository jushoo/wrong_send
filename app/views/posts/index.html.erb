<% @posts.each do |post| %>
  <div class="rounded-lg max-w-sm p-6 bg-white border border-gray-200 shadow mb-6">
    <h4 class="mb-2 font-bold text-xl tracking-tight text-gray-900">
      <%= post.title %>
    </h4>
    <p class="font-normal text-gray-700">
      <%= post.body.first(50) %>...
    </p>
  </div>
<% end %>